
@{
    ViewData["Title"] = "List";
}

<h1>List</h1>
@if (ViewBag.list.Count > 0)
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Published</th>
            <th>Checked Out</th>
            <th>Due Date</th>
            <th>Returned</th> 
        </tr>
        @foreach (Book book in ViewBag.list)
        {
    <tr>
        <td>@(book.ID)</td>
        <td><a href="/Book/Details?id=@(book.ID)">@(book.Title)</a></td>
        <td>@(book.Author.Name)</td>
        <td>@(book.PublicationDate.ToShortDateString())</td>
        @if (book.Borrows.Any())
        {
            <td>@(((DateTime)book.Borrows.First().CheckedOutDate).ToShortDateString())</td>
            <td>@(((DateTime)book.Borrows.First().DueDate).ToShortDateString())</td>
            <td>@((book.Borrows.First().ReturnedDate == null ? "Not Returned" : ((DateTime)book.Borrows.First().ReturnedDate).ToShortDateString()))</td>
        }
        else
        {
            <td>Not Checked Out</td>
            <td>Not Checked Out</td>
            <td>Not Checked Out</td>
        }
    </tr>
        }
    </table>
}
else
{
    <p>No books have been checked out.</p>
}

